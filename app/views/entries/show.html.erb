<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= @entry.created_at.to_formatted_s(:nice_date) %>
<% end %>

<div class="columns is-centered mt-6">
  <div class="column is-one-third">
    <div class="card">
      <%= render @entry %>
    </div>
    <div class="columns is-mobile"></div>
      <div class="column">
        <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to "Delete", entry_path(@entry), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>      
      </div>
    </div>
  </div> 
</div>